<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imgLogoHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="24dp"
        android:src="@drawable/img_logo_surf"
        android:transitionName="@string/transition_image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAppNameHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Surf School"
        android:textColor="#1A32CC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:transitionName="@string/transition_appname"
        app:layout_constraintBottom_toBottomOf="@id/imgLogoHome"
        app:layout_constraintStart_toEndOf="@id/imgLogoHome"
        app:layout_constraintTop_toTopOf="@id/imgLogoHome" />

</androidx.constraintlayout.widget.ConstraintLayout>